<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="MainActivity">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:context="MainActivity">



        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#ffa500"
            tools:context="MainActivity">


            <TextView
                android:id="@+id/home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="home"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/homeScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="0"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="40sp" />

            <Button
                android:id="@+id/homeThree"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:background="#8b8878"
                android:onClick="homeThree"
                android:text="+ 3 points"
                android:textColor="#000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/homeTwo"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:background="#8b8878"
                android:onClick="homeTwo"
                android:text="+2 points"
                android:textColor="#000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/homeOne"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:background="#8b8878"
                android:onClick="homeOne"
                android:text="+1 point"
                android:textColor="#000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/homeMinus"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:background="#8b8878"
                android:onClick="homeMinus"
                android:text="-1"
                android:textColor="#000000"
                android:textSize="24sp" />

        </LinearLayout>


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffa500"
            android:orientation="vertical"
            tools:context="MainActivity">

            <TextView
                android:id="@+id/away"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="Away"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/awayScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="0"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="40sp" />

            <Button
                android:id="@+id/awayThree"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:background="#8b8878"
                android:onClick="awayThree"
                android:text="+ 3 points"
                android:textColor="#000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/awaytwo"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:background="#8b8878"
                android:onClick="awayTwo"
                android:text="+ 2 points"
                android:textColor="#000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/awayOne"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:background="#8b8878"
                android:onClick="awayOne"
                android:text="+ 1 point"
                android:textColor="#000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/awayMinus"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:background="#8b8878"
                android:onClick="awayMinus"
                android:text="-1"
                android:textColor="#000000"
                android:textSize="24sp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="6"
        android:background="#0892d2"
        android:orientation="horizontal"
        tools:context="MainActivity">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:onClick="previous"
            android:background="#8b8878"
            android:text="Previous"
            android:textColor="#000000"
            android:textSize="24sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#8b8878"
            android:onClick="resume"
            android:text="Resume"
            android:textColor="#000000"
            android:textSize="24sp" />
    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:context="MainActivity">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#8b8878"
            android:gravity="bottom"
            android:onClick="reset"
            android:text="Reset Game"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24sp" />

    </LinearLayout>
</LinearLayout>


